{% if special_case %}
    <e>
        <p aid:pstyle="FirstParagraph" aid:cstyle="Text">
            <x aid:cstyle="Headword">{{ special_case.startswith }}</x>
            <x aid:cstyle="Text">…</x>{{ space }}
            <x aid:cstyle="Em">см.</x>{{ nbsp }}
            <x aid:cstyle="CSLSegment">{{ special_case.qv }}</x>
            {% if special_case.dots %}
                <x aid:cstyle="Text">…</x>
            {% else %}
                <x aid:cstyle="Text">.</x>
            {% endif %}
        </p>
    </e>
{% else %}
    {% include 'indesign/reference.xml' with context %}
{% endif %}

