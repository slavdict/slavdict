{% macro etymology(etym, isLanguageChanged, loop) %}

{% if isLanguageChanged %}
    {% if not loop.first %}
        {{ backspace }}<text aid:cstyle="Text">;</text>{{ space }}
    {% endif %}
{% else %}
    {% if not loop.first %}
        {{ backspace }}<text aid:cstyle="Text">,</text>{{ space }}
    {% endif %}
{% endif %}

{{ backspace }}{{ space }}
{% if etym.unitext and etym.is_language('greek') %}
    <etymon aid:cstyle="Greek">
        {{ etym.unitext }}
    </etymon>{{ space }}
{% elif etym.text and etym.is_language('latin') %}
    <etymon>
        {{ etym.text }}
    </etymon>{{ space }}
{% endif %}

{% endmacro %}
