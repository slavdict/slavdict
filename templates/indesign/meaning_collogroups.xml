{% from 'indesign/collogroup.xml' import collogroup with context %}

{% if m.collogroups_non_phraseological %}
    {{ backspace }}</p>{{ newline }}<p aid:pstyle="CollogroupParagraph" aid:cstyle="Text">
    <text aid:cstyle="Diamond">♢{# U+2662 #}</text>{{ nbsp }}
    {% for cg in m.collogroups_non_phraseological %}
        {{ collogroup(cg, loop) }}
    {% endfor %}
{% endif %}

{% if m.collogroups_phraseological %}
    {{ backspace }}</p>{{ newline }}<p aid:pstyle="CollogroupParagraph" aid:cstyle="Text">
    <text aid:cstyle="Diamond">♦{# U+2666 #}</text>{{ nbsp }}
    {% for cg in m.collogroups_phraseological %}
        {{ collogroup(cg, loop) }}
    {% endfor %}
{% endif %}

