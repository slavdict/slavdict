{% macro etymology(etym, isLanguageChanged, loop) %}

{% if isLanguageChanged %}
    {% if not loop.first %}
        {{ backspace }};{{ space }}
    {% endif %}
{% else %}
    {% if not loop.first %}
        {{ backspace }},{{ space }}
    {% endif %}
{% endif %}

{{ backspace }}{{ space }}
{% if etym.unitext and etym.is_language('greek') %}
    <x aid:cstyle="Greek">
        {{ etym.unitext }}
    </x>{{ space }}
{% elif etym.text and etym.is_language('latin') %}
    <x aid:cstyle="Latin">
        {{ etym.text }}
    </x>{{ space }}
{% endif %}

{% endmacro %}
