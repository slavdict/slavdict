{% trim %}
<?xml version="1.0" encoding="UTF-8"?>
<slavdict xmlns:aid="http://ns.adobe.com/AdobeInDesign/4.0/" xmlns:aid5="http://ns.adobe.com/AdobeInDesign/5.0/">
    {% for letter, entries in letter_parts %}
        <letter>
            <p aid:pstyle="Letter">{{ letter }}</p>{{ newline }}

            {% for reference, entry in entries %}
                {% if reference %}
                    {% include 'indesign/reference.xml' with context %}
                {% else %}
                    {% include 'indesign/entry.xml' with context %}
                {% endif %}
                {{ backspace }}{{ newline }}
            {% endfor %}
        </letter>
    {% endfor %}
</slavdict>
{# vim: set ft=django.xml: #}
{% endtrim %}
